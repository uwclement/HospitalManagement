@page
@model HospitalManagement.Pages.Account.Login2Model
@{
}

<style>
    /* Add your custom styles here */
    body {
        background-color: #EBF5FB; /* Set a light background color */
    }

    .container {
        max-width: 400px; /* Adjust the maximum width of the container */
        margin-top: 50px;
    }

    .alert {
        padding: 15px;
        margin-bottom: 20px;
        border: 1px solid transparent;
        border-radius: 4px;
    }

    h3.label {
        color: #007bff; /* Set label text color */
    }

    form {
        background-color: #ffffff; /* Set form background color */
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Add a subtle box shadow */
    }

    label {
        font-weight: bold;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ced4da;
        border-radius: 4px;
    }

    button.btn-primary {
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    button.btn-primary:hover {
        background-color: #0056b3; /* Change the color on hover */
    }
    .reg{
        margin-top:30px;
        margin-left:35px;
    }

    .reg:hover {
        color: #0056b3; /* Change the color on hover */
    }
    img{
        opacity:0.5;
        margin-top:-550px;
        position:fixed;
    }
</style>

<div class="container">
    @if (@Model.message.Length > 0)
    {
        <div class="alert alert-info">
            <span>@Model.message</span>
        </div>
    }

    <h3 class="text-center label">LOGIN</h3>
    <hr />

    <form method="POST" class="mt-4" asp-page-handler="OnPost">
        @Html.AntiForgeryToken()
        <div class="row mt-4">
            <div class="form-group col">
                <label for="Email">Email</label>
                <input type="email" class="form-control mt-2" name="email" placeholder="Enter email" value="">
            </div>
        </div>
        <div class="row mt-4">
            <div class="form-group col">
                <label for="password">PassWord</label>
                <input type="password" class="form-control mt-2" name="password" placeholder="password" value="">
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-4">Submit</button>
    </form>

    <label class="reg" href="/Account/signup">You don't have Account.Register!!!! </label>


	@* <div>
		<img src="~/pics/1595043879529.jpg" />

        </div> *@
</div>
