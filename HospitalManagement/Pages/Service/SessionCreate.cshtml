@page
@model HospitalManagement.Pages.Service.SessionCreateModel
@{
	Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
<style>
	body {
		color: black;
		font-family: cursive;
	}

	form {
		font-size: 14px;
		max-width: 400px;
		margin: auto;
		margin-top: 20px;
	}

	label {
		font-weight: bold;
		margin-bottom: 5px;
	}

	.row {
		margin-bottom: 15px;
	}

	.view {
		max-width:
	}
</style>
<div class="view">
	<h3>Add Session</h3>
	@if (Model.errorMessage.Length > 0)
	{
		<div class="alert alert-warning alert-dismissible fade show " role="alert">
			<strong>@Model.errorMessage</strong>
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
		</div>
	}
	<form method="POST">
		<div class="row mb-3">
			<label class="col-sm-03 col-form-label">Doctor</label>
			<div class="col-sm-03">
				<input type="number" class="form-control" name="doctor" value="@Model.sessioninfo.doctor" />
			</div>
		</div>
		<div class="row mb-3">
			<label class="col-sm-03 col-form-label">Session</label>
			<div class="col-sm-04">
				<input type="date" class="form-control" name="date" value="@Model.sessioninfo.date" />
			</div>
		</div>
		<div class="row mb-3">
			<label class="col-sm-03 col-form-label">Session</label>
			<div class="col-sm-04">
				<input type="time" class="form-control" name="session" value="@Model.sessioninfo.session" />
			</div>
		</div>
		<div class="row mb-3">
			<label class="col-sm-03 col-form-label">Status</label>
			<div class="col-sm-04">
				<input type="text" class="form-control" name="status" value="@Model.sessioninfo.status" />
			</div>
		</div>
		@if (Model.successMessage.Length > 0)
		{
			<div class="row mb-3">
				<div class="col-sm-9">
					<div class="alert alert-success alert-dismissible fade show " role="alert">
						<strong>@Model.successMessage</strong>
						<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
					</div>
				</div>
			</div>
		}
		<div class="row mb-3">
			<div class="offset-sm-3 col-sm-3 d-grid">
				<button type="submit" class="btn btn-primary">Submit</button>
			</div>
			<div class="offset-sm-3 col-sm-3 d-grid">
				<a class="btn btn-primary" href="/Service/ServiceView" role="button">Cancel</a>
			</div>
		</div>

	</form>
</div>