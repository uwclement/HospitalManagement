@model HospitalManagement.Pages.Email.IndexModel
@{  
    ViewData["Title"] = "Index";  
}  
  
<h2>Index</h2>  
  
<p>  
    <a asp-page="Create">Create New</a>  
</p>  
  
<form asp-page="./Index" method="post" enctype="multipart/form-data">  
    <div class="form-actions no-color">  
        <p>  
            @* From : <input type="text" asp-for="email.From" /><br />   *@
            To : <input type="text" asp-for="email.To" /><br />  
            Subject : <input type="text" asp-for="email.Subject" /><br />  
            Body : <textarea asp-for="email.Body"></textarea><br />  
            <button asp-page-handler="SendEmail">Send Email</button>  
        </p>  
    </div>  
</form> 